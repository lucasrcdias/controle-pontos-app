.navbar
  top: 0
  left: 0
  width: 100%
  position: fixed
  height: $navbar-height
  background: $primary-color
  box-shadow: 0 1px 5px rgba(0,0,0,0.5)
  border-bottom: 1px solid $secondary-color

.navbar-wrapper
  text-align: center
  position: relative

.app-title,
.navbar-icon
  color: #fff

.app-title
  margin: 0
  font-weight: 600
  font-size: rem(26px)
  line-height: $navbar-height

.navbar-icon
  top: 50%
  right: 0
  border: 0
  padding: 0
  width: 60px
  height: 35px
  line-height: 35px
  font-size: rem(18px)
  position: absolute
  transform: translateY(-50%)
  background: $secondary-color
  border-radius: $default-border-radius
