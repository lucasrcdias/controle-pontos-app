.navbar
  top: 0
  left: 0
  width: 100%
  position: fixed
  height: $navbar-height
  background: $primary-color
  box-shadow: 0 1px 5px rgba(0,0,0,0.5)
  border-bottom: 1px solid $secondary-color

.navbar-item
  float: left
  color: #fff
  position: relative
  text-align: center

  &.navbar-icons
    width: 10%
    line-height: $navbar-height + 5px

  &.navbar-title
    width: 80%
    line-height: $navbar-height

.app-title,
.navbar-icon
  text-shadow: 1px 1px 1px $secondary-color

.app-title
  margin: 0
  font-weight: 600
  font-size: rem(18px)

.navbar-icons button
  border: 0
  padding: 0
  background: none

.navbar-icon
  color: #fff
  font-size: rem(20px)
